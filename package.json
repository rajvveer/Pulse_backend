    "multer": "^2.0.2",
    "node-geocoder": "^4.4.1",
    "nodemailer": "^7.0.6",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "twilio": "^5.10.2",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
